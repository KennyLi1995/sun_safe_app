        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skinTypeLayout"
            app:layout_constraintTop_toBottomOf="@id/informationCard"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/skinTypeCard"
        android:layout_width="match_parent"
        android:layout_height="183sp"
        android:clickable="true"
        android:layout_weight="1"
        android:visibility="gone"


        app:cardCornerRadius="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"





        android:layout_marginTop="30sp"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="10sp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/informationCard"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/skinTypeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:layout_marginTop="30dp"

                        android:text="Skin type"
                        android:textColor="#9FADB8"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/skinTypeNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:layout_marginTop="10dp"

                        android:text="I"
                        android:textColor="#6E7880"
                        android:textSize="58sp" />



                </LinearLayout>


    </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.card.MaterialCardView
                android:id="@+id/skinTypeExplainCard"
                android:layout_width="match_parent"
                android:layout_height="183sp"
                android:clickable="true"
                android:visibility="gone"

                android:layout_weight="1"

                app:cardCornerRadius="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/white"




                android:layout_marginTop="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="35sp">


            <TextView
                android:id="@+id/skinTypeExplainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Very sensitive skin, burns easily, tans minimally"
                android:layout_margin="15dp"
                android:textColor="#9FADB8"
                android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>





    <TextView
        android:id="@+id/hintMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Take a quiz to help determine your skin type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skinTypeLayout"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/attempt"
        android:layout_width="148sp"
        android:layout_height="48sp"
        android:clickable="true"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hintMessage"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#2F8FD4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="#E5E5E5">

        <TextView
            android:id="@+id/attemptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Attempt"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal" />




    </com.google.android.material.card.MaterialCardView>









