        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.mySkin.MySkinFragment">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/ic_photo" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text=""
                android:textColor="#79838B"
                android:textStyle="bold"
                android:textSize="32dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/gender"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                android:text="Gender"
                android:textColor="#B8C5D0"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/nameText"
                />

            <TextView
                android:id="@+id/genderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                android:text=""
                android:textStyle="bold"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:id="@+id/Height"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/genderText"
                android:text="Height"
                android:textColor="#B8C5D0"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/genderText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                android:text=""
                android:id="@+id/heightText"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/Height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/Weight"
                android:visibility="invisible"

                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                android:text="Weight"
                android:textColor="#B8C5D0"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/heightText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                android:text=""
                android:visibility="invisible"
                android:id="@+id/weightText"

                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/Weight"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clinck again to change your profile >>>"
                android:textStyle="bold"
                android:id="@+id/changeAagin"
                android:textColor="#4BC9FE"
                android:textSize="10dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"

                />





            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cross"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/corss"

        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>






